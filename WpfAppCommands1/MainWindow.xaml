<Window x:Class="WpfAppCommands1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCommands1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label FontSize="30" Content="{Binding Text}"/>
        <Button FontSize="30" Command="{Binding TestCommand}" Content="Click"/>
        <TextBox FontSize="30" Text="{Binding Counter}"/>
        <Button FontSize="30" Command="{Binding CounterCommand}" CommandParameter="+" Content="+"/>
        <Button FontSize="30" Command="{Binding CounterCommand}" CommandParameter="-" Content="-"/>
    </StackPanel>
</Window>
